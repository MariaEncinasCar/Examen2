<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detalles1"
    android:orientation="vertical"
    android:background="@drawable/first_gradient">

    <TextView
        android:id="@+id/nombreProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tacoT"
        android:textSize="30sp"
        android:textColor="@color/dark_green"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/imagenProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/tacos"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:columnCount="3"
        android:layout_gravity="fill_horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp">

        <Button
            android:id="@+id/menosArticulo"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginLeft="140dp"
            android:textColor="@color/white"
            android:text="-"
            android:textSize="15dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/cantidadProducto"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:text="1"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:gravity="center"/>

        <Button
            android:id="@+id/masArticulo"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:text="+"
            android:textSize="15dp"
            android:textAlignment="center"/>
    </GridLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/choiceMeat"
        android:textSize="20sp"
        android:textColor="@color/dark_green"
        android:layout_marginStart="4dp"/>

    <Spinner
        android:id="@+id/comboCarne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:outlineSpotShadowColor="@color/dark_green"
        android:outlineAmbientShadowColor="@color/dark_green"
        android:entries="@string/choiceMeat"
        android:prompt="@string/seleccione"
        android:spinnerMode="dialog"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginVertical="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$"
            android:textSize="25sp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/producto_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="15"
            android:textSize="25sp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            />

        <Button
            android:id="@+id/producto_agregar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/agregar"
            android:textSize="15sp"
            />
    </LinearLayout>

</LinearLayout>